{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["soon", "recently", "not"],
    "properties": {
        "soon": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/event"
            }
        },
        "recently": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/event"
            }
        },
        "not": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/event"
            }
        }
    },
    "definitions": {
        "event": {
            "type": "object",
            "required": ["datestring", "datestamps", "name", "identifier", "URL", "location"],
            "properties": {
                "datestring": {
                    "type": "string",
                    "pattern": "^\\d{1,2}(?:st|nd|rd|th) â€” \\d{1,2}(?:st|nd|rd|th) [A-Za-z]+, \\d{4}$"
                },
                "datestamps": {
                    "type": "object",
                    "required": ["start", "end"],
                    "properties": {
                        "start": {
                            "type": "string",
                            "format": "date"
                        },
                        "end": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                },
                "name": {
                    "type": "string",
                    "minLength": 1
                },
                "identifier": {
                    "type": "string",
                    "pattern": "^[A-Za-z0-9]+$"
                },
                "URL": {
                    "type": "string",
                    "format": "uri"
                },
                "location": {
                    "type": "string",
                    "pattern": "^[A-Za-z ]+, [A-Za-z ]+$"
                }
            }
        }
    }
}